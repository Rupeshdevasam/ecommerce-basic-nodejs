{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["es2015", "es2016", "dom", "es2017", "es6", "es5"],
        "esModuleInterop": true,
        "noImplicitThis": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@src/*": ["src/*"],
            "*": [
                "*.d.ts"
            ]
        },
        "removeComments": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", "src/tests"]
}